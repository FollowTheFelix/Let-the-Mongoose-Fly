<%- include('../partials/header') %>

<table id="list">
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>Flight<br />No.</th>
      <th>Departure<br />Date/Time</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
    <% flights.forEach(function(flight) { %>
    <tr>
      <td><%= flight.title %></td>
      <td><%= flight.releaseYear %></td>
      <td><a href="/flights/<%= flight._id %>">DETAILS</a></td>
    </tr>
    <% }); %>
  </tbody>
</table>

<%- include('../partials/footer') %>
